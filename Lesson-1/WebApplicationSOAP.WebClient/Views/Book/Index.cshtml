@model BooksViewModel

@{
    ViewData["Title"] = "Books";
}

<form asp-controller="Book" asp-action="Index">
    <select asp-for="SearchType" asp-items="@Html.GetEnumSelectList<SearchType>()"></select>
    <input type="text" name="SearchString" />
    <input type="submit" value="Поиск" />
</form>

<table class="table">
    <thead >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Authors)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Books is not null)
        {
            @foreach (var item in Model.Books)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Authors)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
